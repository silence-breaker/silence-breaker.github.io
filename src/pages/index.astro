---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="WJ Blog - 首页">
  <div class="container">
    <section class="hero">
      <h1 class="hero-title fade-in">欢迎来到我的技术博客</h1>
      <p class="hero-description slide-in">分享编程、WSL、线性代数等技术文章</p>
    </section>

    <section class="posts-grid">
      {sortedPosts.map((post) => {
        const formattedDate = new Intl.DateTimeFormat('zh-CN', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        }).format(post.data.date);

        return (
          <article class="post-card">
            <a href={`/posts/${post.slug}`} class="post-link">
              <h2 class="post-card-title">{post.data.title}</h2>
              <div class="post-card-meta">
                <time datetime={post.data.date.toISOString()}>{formattedDate}</time>
                {post.data.categories && (
                  <>
                    <span class="separator">•</span>
                    <span class="category">{post.data.categories}</span>
                  </>
                )}
              </div>
            </a>
          </article>
        );
      })}
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: var(--space-2xl) 0;
    margin-bottom: var(--space-2xl);
  }

  .hero-title {
    font-size: 3rem;
    margin-bottom: var(--space-md);
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .post-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: transform var(--transition-base), box-shadow var(--transition-base), border-color var(--transition-base);
    box-shadow: var(--shadow-sm);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
  }

  .post-card-title {
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .post-card:hover .post-card-title {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .separator {
    color: var(--color-border);
  }

  .category {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
