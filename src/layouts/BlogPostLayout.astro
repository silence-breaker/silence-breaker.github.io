---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: Date;
  categories?: string;
  headings?: { depth: number; slug: string; text: string }[];
}

const { title, date, categories, headings = [] } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(date);

// Filter headings to only include h2 and h3
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);
---

<BaseLayout title={title}>
  <div class={`post-layout container ${tocHeadings.length === 0 ? 'no-toc' : ''}`}>
    <!-- Table of Contents Sidebar -->
    {tocHeadings.length > 0 && (
      <aside class="toc-sidebar">
        <div class="toc-container">
          <h4 class="toc-title">目录</h4>
          <nav class="toc-nav">
            <ul class="toc-list">
              {tocHeadings.map((heading) => (
                <li class={`toc-item toc-depth-${heading.depth}`}>
                  <a href={`#${heading.slug}`} class="toc-link">
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </aside>
    )}

    <!-- Main Article Content -->
    <article class="blog-post">
      <header class="post-header">
        <h1 class="post-title fade-in">{title}</h1>
        <div class="post-meta slide-in">
          <time datetime={date.toISOString()}>{formattedDate}</time>
          {categories && (
            <>
              <span class="separator">•</span>
              <span class="category">{categories}</span>
            </>
          )}
        </div>
      </header>
      
      <div class="post-content">
        <slot />
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .post-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    max-width: 1400px;
  }

  @media (min-width: 1200px) {
    .post-layout {
      grid-template-columns: 250px 1fr;
    }

    .post-layout.no-toc {
      grid-template-columns: 1fr;
      justify-items: center;
    }

    .post-layout.no-toc .blog-post {
      max-width: 800px;
      width: 100%;
    }
  }

  /* Table of Contents Sidebar */
  .toc-sidebar {
    display: none;
  }

  @media (min-width: 1200px) {
    .toc-sidebar {
      display: block;
    }
  }

  .toc-container {
    position: sticky;
    top: 100px;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .toc-title {
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: var(--space-xs);
  }

  .toc-depth-2 {
    font-weight: 500;
  }

  .toc-depth-3 {
    padding-left: var(--space-md);
    font-size: 0.9em;
  }

  .toc-link {
    display: block;
    padding: var(--space-xs) var(--space-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all 0.2s ease;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .toc-link:hover {
    color: var(--color-primary);
    background: rgba(99, 102, 241, 0.1);
    text-decoration: none;
  }

  /* Blog Post Content */
  .blog-post {
    max-width: 800px;
  }

  .post-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-lg);
    border-bottom: 2px solid var(--color-border);
  }

  .post-title {
    margin-bottom: var(--space-md);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
  }

  .separator {
    color: var(--color-border);
  }

  .category {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .post-content {
    animation: fadeIn var(--transition-slow) ease-out;
  }

  .post-content :global(h2) {
    position: relative;
    padding-left: var(--space-md);
    scroll-margin-top: 100px;
  }

  .post-content :global(h3) {
    scroll-margin-top: 100px;
  }

  .post-content :global(h2::before) {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 70%;
    background: linear-gradient(180deg, var(--color-primary), var(--color-secondary));
    border-radius: var(--radius-sm);
  }

  .post-content :global(a) {
    position: relative;
    font-weight: 500;
  }

  .post-content :global(a::after) {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    transition: width var(--transition-base);
  }

  .post-content :global(a:hover::after) {
    width: 100%;
  }

  .post-content :global(img) {
    box-shadow: var(--shadow-lg);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .post-content :global(img:hover) {
    transform: scale(1.02);
    box-shadow: var(--shadow-xl);
  }
</style>

<script>
  // Highlight active TOC item on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const tocLinks = document.querySelectorAll('.toc-link');
    const headings = document.querySelectorAll('.post-content h2, .post-content h3');
    
    if (tocLinks.length === 0 || headings.length === 0) return;

    const observerOptions = {
      rootMargin: '-80px 0px -80% 0px',
      threshold: 0
    };

    const observerCallback = (entries: IntersectionObserverEntry[]) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          tocLinks.forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('href') === `#${id}`) {
              link.classList.add('active');
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(observerCallback, observerOptions);
    headings.forEach(heading => observer.observe(heading));
  });
</script>

<style>
  .toc-link.active {
    color: var(--color-primary);
    background: rgba(99, 102, 241, 0.15);
    font-weight: 600;
  }
</style>
