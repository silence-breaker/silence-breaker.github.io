---
import '../styles/global.css';
import { getCollection } from 'astro:content';
import SearchBox from '../components/SearchBox.tsx';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '技术博客 - 分享编程、WSL、线性代数等技术文章' } = Astro.props;

// Get posts data for search
const posts = await getCollection('posts');
const searchPosts = posts.map(post => ({
  slug: post.slug,
  title: post.data.title,
  date: post.data.date.toISOString(),
  categories: post.data.categories || ''
}));
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="generator" content={Astro.generator}>
  <title>{title}</title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- KaTeX CSS for Math Formulas -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css" integrity="sha384-nB0miv6/jRmo5UMMR1wu3Gz6NLsoTkbqJghGIsx//Rlm+ZU03BU6SQNC66uf4l5+" crossorigin="anonymous">
</head>
<body>
  <header class="header">
    <nav class="container">
      <div class="nav-wrapper">
        <a href="/" class="logo">
          <span class="logo-text">WJ Blog</span>
        </a>
        <div class="nav-links">
          <a href="/" class="nav-link">首页</a>
          <a href="/about" class="nav-link">关于</a>
          <SearchBox posts={searchPosts} client:load />
        </div>
      </div>
    </nav>
  </header>

  <!-- GitHub Profile Card -->
  <aside class="github-profile">
    <a href="https://github.com/silence-breaker" target="_blank" rel="noopener" class="github-avatar-link">
      <img src="/picture/头像.jpg" alt="GitHub Avatar" class="github-avatar" />
    </a>
    <div class="github-info">
      <a href="https://github.com/silence-breaker" target="_blank" rel="noopener" class="github-name">silence-breaker</a>
      <span class="github-label">GitHub</span>
    </div>
  </aside>

  <main class="main-content">
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; {new Date().getFullYear()} WJ Blog. All rights reserved.</p>
      <p>Built with <a href="https://astro.build" target="_blank" rel="noopener">Astro</a></p>
    </div>
  </footer>
</body>
</html>

<style>
  .header {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.8);
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background: rgba(28, 32, 41, 0.8);
    }
  }

  .nav-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) 0;
  }

  .logo {
    text-decoration: none;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-link {
    color: var(--color-text);
    font-weight: 500;
    transition: color var(--transition-fast);
    text-decoration: none;
  }

  .nav-link:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .main-content {
    min-height: calc(100vh - 200px);
    padding: var(--space-2xl) 0;
  }

  .footer {
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--space-xl) 0;
    text-align: center;
  }

  .footer p {
    margin-bottom: var(--space-xs);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .footer a {
    color: var(--color-primary);
    font-weight: 500;
  }

  /* GitHub Profile Card */
  .github-profile {
    position: fixed;
    bottom: 24px;
    right: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 50px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-border);
    z-index: 1000;
    transition: all 0.3s ease;
  }

  .github-profile:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  @media (prefers-color-scheme: dark) {
    .github-profile {
      background: rgba(40, 44, 52, 0.9);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
  }

  .github-avatar-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    min-width: 48px;
    min-height: 48px;
    border-radius: 50%;
    overflow: hidden;
    background: var(--color-bg-secondary);
    transition: transform 0.3s ease;
  }

  .github-avatar-link:hover {
    transform: scale(1.1);
  }

  .github-avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 50%;
  }

  .github-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .github-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .github-name:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .github-label {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .github-label::before {
    content: '';
    display: inline-block;
    width: 8px;
    height: 8px;
    background: #24292e;
    border-radius: 50%;
  }

  @media (prefers-color-scheme: dark) {
    .github-label::before {
      background: #f0f6fc;
    }
  }

  @media (max-width: 768px) {
    .github-profile {
      bottom: 16px;
      right: 16px;
      padding: 8px 12px;
    }

    .github-avatar-link {
      width: 40px;
      height: 40px;
    }

    .github-info {
      display: none;
    }
  }
</style>
